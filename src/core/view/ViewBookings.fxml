<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="vbox" xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1" fx:controller="core.controller.ViewBookingsController">
    <children>
        <TableView fx:id="bookingsTable" prefHeight="400.0" prefWidth="550.0" style="-fx-background-image: url('http://i347.photobucket.com/albums/p471/phi_nguyen8/appointmentbookingsystemGUIbg_zpsmk6gscbu.png');">
            <columns>
                <TableColumn fx:id="BookingCol" text="Booking No." />
                <TableColumn fx:id="CustCol" prefWidth="115.0" text="Customer name" />
                <TableColumn fx:id="EmpCol" prefWidth="115.0" text="Employee Name" />
                <TableColumn fx:id="TypeCol" text="Type" />
                <TableColumn fx:id="DateCol" text="Date" />
                <TableColumn fx:id="TimeCol" text="Time" />
            </columns>
        </TableView>
        <HBox nodeOrientation="RIGHT_TO_LEFT" style="-fx-background-color: #e7e7fb;">
            <children>
                <Button fx:id="btnBackToBusinessHome" mnemonicParsing="false" onAction="#btnBackToBusinessScreen" style="-fx-background-color: #ffffff;" text="BACK" textFill="#1565c0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <font>
                        <Font name="Century Gothic" size="20.0" />
                    </font>
                    <opaqueInsets>
                        <Insets bottom="5.0" />
                    </opaqueInsets>
                </Button>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </children>
</VBox>
